@model IEnumerable<EventDTO>
@{
    Layout = "_Layout";
}
<a class="btn btn-primary" asp-action="Create">
    <i class="bi bi-plus-circle" &nbspace></i>Create</a>
<link rel="stylesheet" href="~/css/bootswatchTheme.css" />

<form class="d-flex" method="post" asp-action="Search" asp-controller="Event" asp-route-SearchKeyword="SearchKeyword">
    <input class="form-control me-sm-2" type="search" placeholder="Search" name="SearchKeyword">
    <div class="d-flex">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        <button class="btn btn-secondary my-2 my-sm-0" type="submit" asp-action="Index" asp-controller="Event">Clear Search</button>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Event Category Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Details", "Event", new { id = item.Id })">@item.Title</a>
                </td>
                <td>@item.EventCategoryName</td>
                <td>@item.StartDate.ToString("yyyy/MM/dd")</td>
                <td>@item.EndDate.ToString("yyyy/MM/dd")</td>
                <td>@item.Active</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3"></i>Delete</a>


                  
                </td>
            </tr>
        }
    </tbody>
</table>
